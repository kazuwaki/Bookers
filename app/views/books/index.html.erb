<h1>Books</h1>
<table>
  <thead>
    <tr>
      <tn>Title</tn>
      <tn>Body</tn>
      <tn></tn>
    </tr>
  </thead>
  <tobdy>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", "/books/#{book.id}" %></td>
      <td><%= link_to "edit", "/books/#{book.id}/edit" %></td>
      <td><%= link_to "destroy","/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tobdy>
</table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
<div class="feild">
  <label class="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label class="book/body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit"Create Book" %>
  </div>
<% end %>
