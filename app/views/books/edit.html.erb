<p class="text-success">
  <%= flash[:notice] %>
</p>


<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
<div class="field">
  <label class="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label class="book/body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit"Update Book" %>
  </div>
<% end %>

<a><%= link_to "Show", book_path %></a>
