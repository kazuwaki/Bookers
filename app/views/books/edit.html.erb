<p class="text-success">
  <%= flash[:notice] %>
</p>


<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="errors">
  <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
  <% end %>
  </div>


<%= form_with model: @book do |f| %>
<div class="field">
  <label class="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label class="book/body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit"Update Book" %>
  </div>
<% end %>

<p><%= link_to "Show", book_path %>
|
<%= link_to "Back","/books" %></p>